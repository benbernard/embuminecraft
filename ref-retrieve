function get_all_sorts()
   possible_sides = { "front", "back", "right", "left", "top", "bottom" }
   sorts = {}
   count = 0
   for i,side in ipairs(possible_sides)
   do
      if peripheral.isPresent(side) 
      then
         print(peripheral.getType(side))
         if(peripheral.getType == "interactiveSorter") then
            count = count + 1
            s = peripgeral.wrap(side)
            sorts[count] = s
         end
      end
   end
   sorts["count"] = count
   return sorts
end

sorts = get_all_sorts()
print("found " .. sorts["count"] .. " sort")