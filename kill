os.loadAPI("/mov")

mt = mov.MoveTracker.new()

count = 0
while 1 do
    while 1 do
        count = count +1
        print("Killing row " .. count)

        mt:kill_forward()
        mt:turn_to(1)

        if turtle.detect() then
            mt:return_to_base()
            break
        end

        mt:kill_one_forward()
        mt:turn_to(2)
        mt:kill_forward()
        mt:turn_to(1)
        if turtle.detect() then
            mt:return_to_base()
            break
        end
        mt:kill_one_forward()
        mt:turn_to(0)
    end

    mt:turn_to(2)
    for slot = 1, 16, 1 do
        turtle.select(slot)
        turtle.drop()
    end

    mt:turn_to(0)

    while turtle.getFuelLevel() < 1255 do
        print("Waiting for fuel up to 1255, Currently at " .. turtle.getFuelLevel())
        sleep(10)
        mt:return_to_base()
    end
end



